<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">
    
    <!-- Vehicle types matching your requirements -->
    <vType id="car" vClass="passenger" color="1,1,0" length="5" accel="2.6" decel="4.5"/>
    <vType id="bike" vClass="bicycle" color="0,1,0" length="1.8" accel="1.2" decel="3.0"/>
    <vType id="bus" vClass="bus" color="0,0,1" length="12" accel="1.2" decel="4.0"/>
    <vType id="truck" vClass="truck" color="0.5,0.5,0.5" length="7.5" accel="1.3" decel="4.0"/>
    <vType id="lorry" vClass="trailer" color="0.3,0.3,0.3" length="16.5" accel="1.0" decel="4.0"/>
    <vType id="auto" vClass="taxi" color="1,1,0" length="3.5" accel="2.0" decel="4.0"/>

    <!-- Routes through junction (12 possible routes: 4 approaches x 3 exits each) -->
    
    <!-- From North -->
    <route id="north_to_east" edges="north_in east_out"/>
    <route id="north_to_south" edges="north_in south_out"/>
    <route id="north_to_west" edges="north_in west_out"/>
    
    <!-- From East -->
    <route id="east_to_north" edges="east_in north_out"/>
    <route id="east_to_south" edges="east_in south_out"/>
    <route id="east_to_west" edges="east_in west_out"/>
    
    <!-- From South -->
    <route id="south_to_north" edges="south_in north_out"/>
    <route id="south_to_east" edges="south_in east_out"/>
    <route id="south_to_west" edges="south_in west_out"/>
    
    <!-- From West -->
    <route id="west_to_north" edges="west_in north_out"/>
    <route id="west_to_east" edges="west_in east_out"/>
    <route id="west_to_south" edges="west_in south_out"/>

    <!-- Traffic flows: Higher flow on North and South (main roads) -->
    
    <!-- North approach traffic -->
    <flow id="north_cars" type="car" begin="0" end="3600" probability="0.12" route="north_to_south"/>
    <flow id="north_cars_turn" type="car" begin="0" end="3600" probability="0.04" route="north_to_east"/>
    <flow id="north_bikes" type="bike" begin="0" end="3600" probability="0.08" route="north_to_south"/>
    <flow id="north_bus" type="bus" begin="0" end="3600" probability="0.02" route="north_to_south"/>
    <flow id="north_auto" type="auto" begin="0" end="3600" probability="0.05" route="north_to_west"/>
    
    <!-- East approach traffic (lighter) -->
    <flow id="east_cars" type="car" begin="0" end="3600" probability="0.05" route="east_to_west"/>
    <flow id="east_bikes" type="bike" begin="0" end="3600" probability="0.04" route="east_to_west"/>
    <flow id="east_auto" type="auto" begin="0" end="3600" probability="0.02" route="east_to_north"/>
    
    <!-- South approach traffic (heavy) -->
    <flow id="south_cars" type="car" begin="0" end="3600" probability="0.15" route="south_to_north"/>
    <flow id="south_cars_turn" type="car" begin="0" end="3600" probability="0.05" route="south_to_east"/>
    <flow id="south_bikes" type="bike" begin="0" end="3600" probability="0.10" route="south_to_north"/>
    <flow id="south_bus" type="bus" begin="0" end="3600" probability="0.03" route="south_to_north"/>
    <flow id="south_truck" type="truck" begin="0" end="3600" probability="0.02" route="south_to_north"/>
    <flow id="south_auto" type="auto" begin="0" end="3600" probability="0.06" route="south_to_west"/>
    
    <!-- West approach traffic -->
    <flow id="west_cars" type="car" begin="0" end="3600" probability="0.07" route="west_to_east"/>
    <flow id="west_bikes" type="bike" begin="0" end="3600" probability="0.04" route="west_to_north"/>
    <flow id="west_auto" type="auto" begin="0" end="3600" probability="0.02" route="west_to_south"/>
    
    <!-- Emergency vehicle (ambulance on south at t=90s) -->
    <vehicle id="ambulance_emergency" type="bus" depart="90" route="south_to_north" color="1,0,0"/>

</routes>
